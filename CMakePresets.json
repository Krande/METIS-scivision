{
  "version": 6,
  "include": [
    ".env.json"
  ],
  "configurePresets": [
    {
      "name": "conda-shared",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": [
        "env-vars"
      ],
      "environment": {
        "LIBRARY_PREFIX": "$env{PREFIX}/Library"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_GENERATOR_PLATFORM": "",
        "CMAKE_GENERATOR_TOOLSET": "",
        "CMAKE_PREFIX_PATH": "$env{PREFIX};$env{LIBRARY_PREFIX};$env{LIBRARY_PREFIX}/include;$env{LIBRARY_PREFIX}/lib;$env{LIBRARY_PREFIX}/bin",
        "CMAKE_INSTALL_PREFIX": "$env{LIBRARY_PREFIX}",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY",
        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "ON",
        "intsize": "64",
        "realsize": "64"
      }
    },
    {
      "name": "msvc-ifx",
      "description": "MSVC with Intel Fortran",
      "cmakeExecutable": "$env{LIBRARY_PREFIX}/bin/cmake.exe",
      "inherits": [
        "conda-shared"
      ],
      "environment": {
        "CC": "cl.exe",
        "CFLAGS": "/0d /Zi"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_C_FLAGS": "/nologo /MD",
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON",
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio (MSVC) with Intel Fortran"
        }
      }
    }
  ]
}
